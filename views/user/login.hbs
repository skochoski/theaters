<main>
    <form action="/user/login" method="POST">
        <h2>Login</h2>
        <div>
            <label for="username">Username:</label>
            <input type="text" name="username" value="{{ previousUsername }}" placeholder="Username" value="">
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" name="password" value="{{ previousPassword }}" placeholder="Password" value="">
        </div>

        <button class="btn" type="submit">Login</button>
    </form>
</main>